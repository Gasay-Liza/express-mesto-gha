{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends":
  "airbnb-base",
  "rules": {
    "quotes": [2, "double"],
    "no-underscore-dangle": ["error",{"allow":["_id"]}],
    "no-else-return": [2, {"allowElseIf" : false}],
    "max-classes-per-file": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "dependencies": false
      }
    ]
  }
}
